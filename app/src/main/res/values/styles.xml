<resources>

    <style name="AppTheme"
        parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.SettingActivity">
            <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="preferenceTheme">@style/q</item>-->
    </style>

    <style name="AppTheme.SplashActivity">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!--解决启动Activity背景颜色为白色的问题-->
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="text_shadow">
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="textToolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#d3d3d3</item>
    </style>

    <style name="textToolbarContent">
        <item name="android:textColor">#70ffffff</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
